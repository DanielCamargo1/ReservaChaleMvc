@model IEnumerable<ChaleModel>

@{
    ViewData["title"] = "Cadastrar Reserva";
}

<div class="container bg-dark p-5 rounded-5">
    <div class="mb-5 text-center">
        <h1 class="text-light">Reserva do Chalé </h1>
    </div>
    <form method="post" asp-controller="Home" asp-action="Reservar">
        <div class="mb-3">
            <label for="Recebedor" class="form-label text-light">Quem esta se hospedando:</label>
            <input type="text" class="form-control" id="Recebedor" placeholder="Nome:">
        </div>

        <div class="mb-3">
            <label for="Fornecedor" class="form-label text-light">Quantidade De Pessoas:</label>
            <input type="text" class="form-control" id="Fornecedor" placeholder="Número de pessoas que se hospedará:">
        </div>

        <div class="mb-3">
            <label for="Livro" class="form-label text-light">Telefone para contato:</label>
            <input type="text" class="form-control"id="Livro" placeholder="Digite seu telefone: ">
        </div>

        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-success w-50">Adicionar</button>
            <a class="btn btn-primary w-50" asp-controller="Home" asp-action="Index">Voltar</a>
        </div>

    </form>
</div>